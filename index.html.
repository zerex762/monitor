<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOONITOR | Live Map</title>
    
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    <style>
        body, html { margin: 0; padding: 0; height: 100%; background: #000; overflow: hidden; }
        #map { height: 100vh; width: 100%; background: #050505; }
        
        /* Стиль для іконок дронів */
        .drone-icon { transition: all 1s linear; }
    </style>
</head>
<body>

    <div id="map"></div>

    <script>
        // Відразу запускаємо мапу при завантаженні сторінки
        window.onload = () => {
            const map = L.map('map', { 
                zoomControl: false,
                attributionControl: false 
            }).setView([48.3, 31.1], 6);
            
            // Темний тактичний шар мапи
            L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png').addTo(map);

            // ТЕСТОВА ЦІЛЬ (щоб ти бачив, що все працює)
            L.circleMarker([50.45, 30.52], {
                radius: 8,
                fillColor: "#ff0000",
                color: "#fff",
                weight: 2,
                fillOpacity: 0.9
            }).addTo(map).bindPopup("СИСТЕМА АКТИВНА");
        };
    </script>
</body>
</html>
