        body, html { margin: 0; padding: 0; height: 100%; background: #000; font-family: sans-serif; overflow: hidden; color: #fff; }
        #map { height: 100vh; width: 100%; background: #050505; visibility: hidden; }
        
        /* Екран авторизації */
        #auth-screen { 
            position: fixed; inset: 0; background: #000; 
            z-index: 9999; display: flex; align-items: center; justify-content: center; 
        }
        .auth-box { 
            max-width: 350px; width: 85%; padding: 30px; 
