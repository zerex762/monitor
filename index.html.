<body>

    <div id="auth-screen">
        <div class="auth-box">
            <h1 style="letter-spacing: 5px; margin-bottom: 5px;">MOONITOR</h1>
            <p style="color: #444; font-size: 10px; margin-bottom: 25px; text-transform: uppercase;">Система моніторингу повітряних цілей</p>

            <div style="display: flex; justify-content: center;">
                <div class="cf-turnstile" 
                     data-sitekey="0x4AAAAAAACY-UjwFSgMOGSUG" 
                     data-callback="onVerify"
                     data-theme="dark"></div>
            </div>

            <button id="enter-btn" class="btn-red" onclick="startSystem()" disabled>УВІЙТИ В СИСТЕМУ</button>
        </div>
    </div>

    <div id="map"></div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // Активуємо кнопку після капчі
        function onVerify() {
            const btn = document.getElementById('enter-btn');
            btn.disabled = false;
            btn.classList.add('active');
        }

        // Запуск карти
        function startSystem() {
            document.getElementById('auth-screen').style.display = 'none';
            document.getElementById('map').style.visibility = 'visible';
            
            // Створюємо карту з фокусом на Україну
            const map = L.map('map', { zoomControl: false }).setView([48.3, 31.1], 6);
            
            // Додаємо темний стиль карти
            L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png').addTo(map);

            // Тестовий маркер (Київ)
            L.circleMarker([50.45, 30.52], {
                radius: 7, fillColor: "#ff0000", color: "#fff", weight: 1, fillOpacity: 0.9
            }).addTo(map).bindPopup("<b>СИСТЕМА АКТИВНА</b>");
        }
    </script>
</body>
