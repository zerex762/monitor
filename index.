<script>
const STATE = { 
    isOwner: false, droneMode: false, animated: [], 
    currentSpeed: 300, iconSize: 40, 
    firstClick: null, previewPoint: null,
    selectedType: 'shahed', selectedLabel: '–®–∞—Ö–µ–¥'
};

const tiles = {
    dark: L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png'),
    light: L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png'),
    sat: L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}')
};

const map = L.map('map', { zoomControl: false, layers: [tiles.dark] }).setView([48.8, 31.2], 6);
const $ = id => document.getElementById(id);

function changeMap(style, e) {
    Object.values(tiles).forEach(t => map.removeLayer(t));
    tiles[style].addTo(map);
    document.querySelectorAll('.map-btn').forEach(b => b.classList.remove('active'));
    e.target.classList.add('active');
}

function setType(type, label, event) {
    STATE.selectedType = type;
    STATE.selectedLabel = label;
    document.querySelectorAll('.type-btn').forEach(b => b.classList.remove('selected'));
    if (event) event.target.classList.add('selected');
}

$('ai-btn').onclick = async () => {
    const city = $('ai-input').value.trim();
    if (!city) return;
    $('status').innerText = "–ü–æ—à—É–∫...";
    try {
        const r = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(city)},Ukraine`);
        const d = await r.json();
        if (d.length > 0) {
            const target = L.latLng(d[0].lat, d[0].lon);
            const start = L.latLng(parseFloat(d[0].lat) + 1.5, parseFloat(d[0].lon) + 1.5);
            createObject(start, target, STATE.selectedType, d[0].display_name.split(',')[0]);
            $('ai-input').value = "";
            $('status').innerText = "–ü—É—Å–∫ –ø–æ: " + city;
        } else { $('status').innerText = "–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ"; }
    } catch (e) { $('status').innerText = "–ü–æ–º–∏–ª–∫–∞"; }
};

map.on('click', async (e) => {
    if (!STATE.droneMode) return;
    if (!STATE.firstClick) {
        STATE.firstClick = e.latlng;
        STATE.previewPoint = L.circleMarker(e.latlng, { radius: 5, color: '#0066cc' }).addTo(map);
    } else {
        const res = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${e.latlng.lat}&lon=${e.latlng.lng}`).then(r => r.json());
        createObject(STATE.firstClick, e.latlng, STATE.selectedType, res.address.city || res.address.town || "–¶—ñ–ª—å");
        if (STATE.previewPoint) map.removeLayer(STATE.previewPoint);
        STATE.firstClick = null;
    }
});

function getAngle(s, e) {
    const rad = Math.PI / 180;
    const y = Math.sin((e.lng - s.lng) * rad) * Math.cos(e.lat * rad);
    const x = Math.cos(s.lat * rad) * Math.sin(e.lat * rad) - Math.sin(s.lat * rad) * Math.cos(e.lat * rad) * Math.cos((e.lng - s.lng) * rad);
    return (Math.atan2(y, x) * 180 / Math.PI + 360) % 360;
}

function createObject(s, e, type, cityName) {
    const dist = map.distance(s, e);
    const dur = (dist / STATE.currentSpeed) * 1000;
    const angle = getAngle(s, e);
    const iconUrl = (type === 'mig') ? 'prykryttia.png' : `icons/${type}.png`;
    
    const m = L.marker(s, {
        icon: L.divIcon({
            className: 'drone-icon',
            html: `<img src="${iconUrl}" style="width:${STATE.iconSize}px; transform:rotate(${angle}deg);" onerror="this.src='https://cdn-icons-png.flaticon.com/512/5810/5810452.png'; this.style.filter='invert(1)'">`,
            iconSize: [STATE.iconSize, STATE.iconSize], iconAnchor: [STATE.iconSize/2, STATE.iconSize/2]
        })
    }).addTo(map);

    STATE.animated.push({ m, s, e, dur, t0: performance.now(), cityName, typeLabel: STATE.selectedLabel });
}

function loop() {
    const now = performance.now();
    for (let i = STATE.animated.length - 1; i >= 0; i--) {
        const o = STATE.animated[i];
        const p = (now - o.t0) / o.dur;
        if (p >= 1) {
            const news = $('news');
            news.innerText = `‚ö° –í–∏–±—É—Ö —É –º. ${o.cityName} (${o.typeLabel})!`;
            news.style.display = 'block';
            map.removeLayer(o.m);
            STATE.animated.splice(i, 1);
            setTimeout(() => news.style.display = 'none', 4000);
            continue;
        }
        o.m.setLatLng([o.s.lat + (o.e.lat - o.s.lat) * p, o.s.lng + (o.e.lng - o.s.lng) * p]);
    }
    $('obj-count').innerText = "–¶—ñ–ª–µ–π: " + STATE.animated.length;
    requestAnimationFrame(loop);
}

$('auth-btn').onclick = () => {
    if(prompt('–ü–∞—Ä–æ–ª—å:') === 'zerexlov') {
        $('drone-btn').disabled = false;
        $('ai-box').style.display = 'flex';
        $('type-box').style.display = 'block';
        $('settings-ui').style.display = 'flex';
        $('auth-btn').textContent = 'üîì';
    }
};

$('speed-range').oninput = function() { STATE.currentSpeed = parseInt(this.value); $('speed-val').innerText = this.value + " –∫–º/–≥"; };
$('size-range').oninput = function() { STATE.iconSize = parseInt(this.value); $('size-val').innerText = this.value + " px"; };
$('drone-btn').onclick = () => { STATE.droneMode = !STATE.droneMode; $('drone-btn').classList.toggle('active'); };
$('clear-btn').onclick = () => { STATE.animated.forEach(o => map.removeLayer(o.m)); STATE.animated = []; };

loop();
</script>
</body>
</html>
